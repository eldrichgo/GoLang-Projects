type Task {
  id: Int!
  title: String!
  status: String!
}

type Query {
  tasks: [Task!]!
  task(id: Int!): Task
}

input InputTask {
  title: String!
  status: String!
}

type Mutation {
  createTask(input: InputTask!): Task
  updateTask(id: Int!, status: String!): Task
  deleteTask(id: Int!): Boolean
}
